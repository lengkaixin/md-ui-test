{
  "packages": ["packages/*"],
  "version": "independent",
  "changelog": {
    "labels": {
      "pr(enhancement)": ":rocket: Enhancement",
      "pr(bug)": ":bug: Bug Fix",
      "pr(documentation)": ":book: Documentation",
      "pr(dependency)": ":deciduous_tree: Dependency",
      "pr(chore)": ":turtle: Chore"
    },
    "repo": "umijs/father-doc",
    "cacheDir": ".changelog"
  },
  "command": {
    "version": {
      "exact": true
    }
  },
  "npmClient": "yarn"
}
