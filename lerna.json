{
  "packages": ["packages/*"],
  "version": "independent",
  "npmClient": "yarn",
  "command": {
    "publish": {
      "registry": "http://172.24.108.245:4873",
      "conventionalCommits": true
    },
    "init": {
      "exact": true
    }
  },
  "changelog": {
    "repo": "@lengkaxin/components",
